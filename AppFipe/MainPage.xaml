<?xml version="1.0" encoding="utf-8" ?>

<!-- Pág interna do aplicativo, layout padrão -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFipe.MainPage">

    <!--(ScrollView) barra de rolagem caso o software ocupar toda a pág -->
    <ScrollView>
        <!--Muda o layout da pág horizontal ou vertical-->
        <VerticalStackLayout 
            Spacing="15"
            Padding="10,0"
            VerticalOptions="Center">

            <Label
                Text="Tabela Fipe Canal"
                FontSize="32"
                HorizontalOptions="Center"
                TextColor="DarkOliveGreen"
                FontAttributes="Bold"
                SemanticProperties.HeadingLevel="Level1"
                />

            <Label
                Text="Aplicativo Maui"
                FontSize="21"
                HorizontalOptions="Center"
                TextColor="Red"
                SemanticProperties.HeadingLevel="Level2"
                />


            <Label
                Text="Tipo de Veículo !"
                SemanticProperties.HeadingLevel="Level3"
                TextColor="MediumVioletRed"
                FontSize="18"
                HorizontalOptions="Center" />

            <Picker x:Name="picker"
        Title="Selecione o tipo de veículo">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Carro</x:String>
                        <x:String>Moto</x:String>
                        <x:String>Caminhões</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <Button
                x:Name="CounterBtn"
                Text="Calcular"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="resultado"
                Text=""
                BackgroundColor="DarkKhaki"
                TextColor="OrangeRed"
                SemanticProperties.HeadingLevel="Level8"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="50"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
